    <!-- Start Header Area -->
<header class="header_area sticky-header">
    <div class="main_menu">
        <nav class="navbar navbar-expand-lg navbar-light main_box">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <a class="navbar-brand logo_h" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/theme/img/logo-mamby2.png" alt="">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse offset" id="navbarSupportedContent">
                    <ul class="nav navbar-nav menu_nav ml-auto">

                        <!-- Anasayfa Menu -->
                        <li class="nav-item @(Context.Request.Path == "/" ? "active" : "")">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </li>

                        <!-- Ürünler Menu -->
                        <li class="nav-item submenu dropdown @(Context.Request.Path == "/Product" ? "active" : "")">
                            <a class="nav-link" asp-controller="Product" asp-action="Index">Ürünler</a>
                        </li>

                        <!-- En Popüler Menu  -->
                        <li class="nav-item submenu dropdown @(Context.Request.Path == "/Home/Tracking" || Context.Request.Path == "/Home/Elements" ? "active" : "")">
                            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">En Popüler</a>
                            <ul class="dropdown-menu">
                                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index"> Çok Satanlar</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index"> Çok Sevilenler</a></li>
                            </ul>
                        </li>

                        <!-- Hakkımızda menü öğesi -->
                        <li class="nav-item @(Context.Request.Path=="/Contact" ? "active" : "")">
                            <a class="nav-link" asp-controller="Home" asp-action="About">HAKKIMIZDA</a>
                        </li>

                        <!-- İletişim menü öğesi -->
                        <li class="nav-item @(Context.Request.Path=="/Contact" ? "active" : "")">
                            <a class="nav-link" asp-controller="Home" asp-action="Contact">İLETİŞİM</a>
                        </li>                       

                        <!-- User Menüsü -->
                        <li class="nav-item submenu dropdown" id="userDropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                               aria-expanded="false">
                                <img src="~/theme/img/user.png" alt="User Icon" style="width:25px" />
                            </a>
                            <ul class="dropdown-menu">
                                <vc:user></vc:user>
                            </ul>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="nav-item"><a asp-action="Index" asp-controller="Card" class="cart"><span class="ti-bag"></span></a></li>
                        <!-- Arama Butonu -->
                        <li class="nav-item">
                            <button class="search" type="submit"><span class="lnr lnr-magnifier" id="search"></span></button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div class="search_input" id="search_input_box">
        <div class="container">
            <form method="get" asp-action="Index" asp-controller="Product">
                <input type="text" name="search" class="form-control" id="search_input" placeholder="Search Here" />
                <button type="submit" class="btn"></button>
                <span class="lnr lnr-cross" id="close_search" title="Close Search"></span>
            </form>
        </div>
    </div>
</header>
<!-- End Header Area -->


