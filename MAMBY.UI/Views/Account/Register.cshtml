@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Üye Ol</h1>
                <nav class="d-flex align-items-center">
                    <a asp-action="Index" asp-controller="Home">Anasayfa<span class="lnr lnr-arrow-right"></span></a>
                    <a href="category.html">Üye Ol</a>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- End Banner Area -->
<!--================Login Box Area =================-->
<section class="login_box_area section_gap">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="login_form_inner">
                    <h3>Üye Ol</h3>
                    <form class="row login_form" asp-action="Register" asp-controller="Account" method="post" id="contactForm" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-md-12 form-group">
                            <input asp-for="Name" type="text" class="form-control" placeholder="Adı" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Adı'">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input asp-for="Surname" type="text" class="form-control" placeholder="Soyadı" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Soyadı'">
                            <span asp-validation-for="Surname" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input asp-for="BirthDate" type="date" class="form-control" placeholder="Doğum Tarihi" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Doğum Tarihi'">
                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input asp-for="Address" type="text" class="form-control" placeholder="Adres Bilgisi" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Adres Bilgisi'">
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input asp-for="UserName" type="text" class="form-control" placeholder="Kullanıcı Adı" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Kullanıcı Adı'">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="PhoneNumber" onfocus="this.placeholder = ''" onblur="this.placeholder = 'PhoneNumber'">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input asp-for="Email" type="email" class="form-control" placeholder="Email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email'">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>                        
                        <div class="col-md-12 form-group">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Parola" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Parola'">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Tekrar Parola" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Tekrar Parola'">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <button type="submit" value="submit" class="primary-btn">Üye Ol</button>
                            <br /><br /><br /><br /><br />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Login Box Area =================-->
