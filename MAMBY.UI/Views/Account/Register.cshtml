@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Üye Ol</h1>
                <nav class="d-flex align-items-center">
                    <a asp-action="Index" asp-controller="Home">Anasayfa<span class="lnr lnr-arrow-right"></span></a>
                    <a href="category.html">Üye Ol</a>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- End Banner Area -->
<!--================Login Box Area =================-->
<section class="login_box_area section_gap">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
            </div>
            <div class="col-lg-12">
                <div class="login_form_inner">
                    <h3>Üye Ol</h3>
                    <form class="row login_form" asp-action="Register" asp-controller="Account" method="post" id="contactForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-md-12 form-group">
                            <input type="text" class="form-control" placeholder="Adı" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Name'">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input type="text" class="form-control" placeholder="Soyadı" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Surname'">
                            <span asp-validation-for="Surname" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input type="text" class="form-control" placeholder="Kullanıcı Adı" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Username'">
                            <span asp-validation-for="Surname" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input type="email" class="form-control" placeholder="Email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email'">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input type="password" class="form-control" placeholder="Parola" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Password'">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input type="password" class="form-control" placeholder="Tekrar Parola" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Confirm Password'">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-12 form-group">
                            <button type="submit" value="submit" class="primary-btn">Üye Ol</button>
                        </div>
                    </form>


                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Login Box Area =================-->
