@model UserViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Ödeme Sayfası</h1>
                <nav class="d-flex align-items-center">
                    <a asp-action="Index" asp-controller="Home">Home<span class="lnr lnr-arrow-right"></span></a>
                    <a href="single-product.html">Ödeme</a>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- End Banner Area -->
<!--================Checkout Area =================-->
<section class="checkout_area section_gap">
    <div class="container">
        <div class="billing_details">
            <div class="row">
                <div class="col-lg-8">
                    <h3>Billing Details</h3>
                    <form class="row contact_form" action="#" method="post" novalidate="novalidate">
                        <div class="col-md-6 form-group p_star">
                            <input type="text" class="form-control" id="first" asp-for="Name" readonly>
                        </div>
                        <div class="col-md-6 form-group p_star">
                            <input type="text" class="form-control" id="last" asp-for="Surname" readonly>
                        </div>
                        <div class="col-md-12 form-group">
                            <input type="text" class="form-control" id="company" asp-for="Address" placeholder="Company name" readonly>
                        </div>
                        <div class="col-md-6 form-group p_star">
                            <input type="text" class="form-control" id="number" asp-for="PhoneNumber" readonly>
                        </div>
                        <div class="col-md-6 form-group p_star">
                            <input type="text" class="form-control" id="email" asp-for="Email" readonly>
                        </div>
                        <div class="col-md-12 form-group p_star">
                            <input type="text" class="form-control" id="add1" name="add1">
                            <span class="placeholder" data-placeholder="Ülke"></span>
                        </div>
                        <div class="col-md-12 form-group p_star">
                            <input type="text" class="form-control" id="add1" name="add1">
                            <span class="placeholder" data-placeholder="Şehir"></span>
                        </div>
                        <div class="col-md-12 form-group p_star">
                            <input type="text" class="form-control" id="add2" name="add2">
                            <span class="placeholder" data-placeholder="Mahalle / Sokak"></span>
                        </div>
                        <div class="col-md-12 form-group p_star">
                            <input type="text" class="form-control" id="city" name="city">
                            <span class="placeholder" data-placeholder="Bina"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input type="text" class="form-control" id="zip" name="zip" placeholder="Postcode/ZIP">
                        </div>
                    </form>
                     <partial name="CreaditCardPartialView" />
                 </div>

                <div class="col-lg-4">
                    <div class="order_box">
                        <h2>Faturanız</h2>
                        <ul class="list">
                            <li class="list-group-item d-flex justify-content-between">
                                <strong class="text-start">ÜRÜN</strong>
                                <strong class="text-center">ADET</strong>
                                <strong class="text-right">FİYAT</strong>
                            </li>
                            @foreach (var item in ViewBag.cart)
                            {
                                <li class="list-group-item d-flex justify-content-between">
                                    <span class="text-start">@item.ProductName</span>
                                    <span class="text-center">@item.Quantity</span>
                                    <span class="text-right">@item.Price</span>
                                </li>
                            }
                        </ul>
                        <ul class="list list_2 mt-5">
                            <li><strong>Toplam Fiyat : </strong><span>@ViewBag.TotalPrice</span></li>
                        </ul>
                        <a class="primary-btn mt-5" href="#">Ödeme Yap</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>